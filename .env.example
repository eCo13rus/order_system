# Пример ENV переменных для локальной разработки

# Логирование
LOG_LEVEL=debug
LOG_PRETTY=true

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=app
MYSQL_PASSWORD=app_password
MYSQL_DATABASE=order_system

# Redis
REDIS_ADDR=localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092

# JWT (RS256 - асимметричная криптография)
# Сгенерировать ключи: make jwt-keys
JWT_PRIVATE_KEY_PATH=./secrets/jwt/private.pem   # Только для User Service (issuer)
JWT_PUBLIC_KEY_PATH=./secrets/jwt/public.pem     # Для всех сервисов (верификация)
JWT_ISSUER=order-system
JWT_ACCESS_TOKEN_TTL=15m                         # Время жизни access token
JWT_REFRESH_TOKEN_TTL=168h                       # Время жизни refresh token (7 дней)

# Сервисы (gRPC порты)
USER_SERVICE_ADDR=localhost:50051
ORDER_SERVICE_ADDR=localhost:50052
PAYMENT_SERVICE_ADDR=localhost:50053

# API Gateway
GATEWAY_PORT=8080

# Jaeger
JAEGER_ENDPOINT=http://localhost:4317

